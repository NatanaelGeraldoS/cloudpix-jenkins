# Frontend Dockerfile untuk Vite + React
FROM node:18-alpine as build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application dengan Vite
RUN npm run build

# Production stage dengan Nginx
FROM nginx:alpine

# Copy built files from dist folder (Vite default)
COPY --from=build /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]